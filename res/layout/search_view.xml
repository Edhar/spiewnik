<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
 android:orientation="vertical">
	<LinearLayout
	 android:id="@+id/linearLayout1"
	 android:layout_width="match_parent"
	 android:layout_height="wrap_content"
	 android:paddingTop="5dp"
	 android:paddingBottom="5dp"
	 android:background="#609">
		<TextView
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:text="Search:"
         android:textColor="#8CF7E6"
		 android:textSize="20sp"		 
		 android:gravity="left|center_vertical"
		 android:layout_marginLeft="5dp"
		 android:layout_marginRight="5dp">
		</TextView>
		<EditText
		 android:id="@+id/SearchEditText"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:textSize="25sp"
		 android:minEms="8"
		 android:layout_marginRight="0dip"
		 android:paddingRight="0dip"
		 android:textColor="#fff">		
		</EditText>
		<Button
		 android:id="@+id/SearcTextClearButton"
		 android:layout_width="50dip"
		 android:layout_height="50dip"
		 android:text="X"
		 android:textStyle="bold"
		 android:textSize="25sp"
		 android:layout_marginLeft="0dip"
		 android:paddingLeft="0dip"
		 android:gravity="center"
		 android:textColor="#8CF7E6"
		 android:background="#00000000"
		 android:visibility="invisible">
		</Button>
	</LinearLayout>
	<LinearLayout
	 android:id="@+id/linearLayout2"
	 android:layout_width="match_parent"
	 android:layout_height="wrap_content"
	 android:weightSum="3">
		<Button
		 android:id="@+id/RecentlyViewedButton"
		 android:layout_width="0dip"
    	 android:layout_weight="1"
		 android:layout_height="wrap_content"
		 android:text="Recent"
		 android:layout_marginLeft="4dp"
		 android:layout_marginTop="4dp"
		 android:layout_marginBottom="2dp"
		 android:layout_marginRight="2dp"
		 android:textColor="#A9A9A9"
		 android:background="#e0eaf1">
		</Button>
		<Button
		 android:id="@+id/OftenViewedButton"
		 android:layout_width="0dip"
		 android:layout_weight="1"
		 android:layout_height="wrap_content"
		 android:text="Often"
		 android:layout_marginLeft="2dp"
		 android:layout_marginTop="4dp"
		 android:layout_marginBottom="2dp"
		 android:layout_marginRight="4dp"
		 android:textColor="#A9A9A9"
		 android:background="#e0eaf1">
		</Button>
		<Button
		 android:id="@+id/SiteRatingViewedButton"
		 android:layout_width="0dip"
		 android:layout_weight="1"
		 android:layout_height="wrap_content"
		 android:text="Site Rating"
		 android:layout_marginLeft="2dp"
		 android:layout_marginTop="4dp"
		 android:layout_marginBottom="2dp"
		 android:layout_marginRight="4dp"
		 android:textColor="#A9A9A9"
		 android:background="#e0eaf1">
		</Button>
	</LinearLayout>
	<LinearLayout
	 android:id="@+id/linearLayout3"
	 android:layout_width="match_parent"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="10dp">
		<ListView
        android:id="@+id/SongsListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000">
	    </ListView>
	</LinearLayout>
</LinearLayout>